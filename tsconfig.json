{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./api/dist",
    "rootDir": "./api",
    "baseUrl": "./",
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "api/dist"
  ]
}
